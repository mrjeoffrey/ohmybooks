<section class="section mt-6 pt-6">
        <h1 class="title">Your library</h1>
        <h2 class="subtitle">
          Here are some books you have written a review on
        </h2>
      </section>

{{#each books as |book|}}
    <div class="dish col-md-5">
      
      <p>
        {{book.id}}.
        {{book.title}}
        {{book.description}}
      </p>
    </div>
    <div class="col-md-7">
      <p></p>
    </div>
  {{/each}}

    <!-- card for book sections -->
    <section class="columns">
        <div class="hero">
            <a class="hero-background image is-3by1 cardcvr">
                <!-- <img src="./img/background2.jpg"> -->
            </a>
        </div>
 
        <div class="column is-3 cardcvr card is-offset-2">
          <div class="column">
            <div class="card">
                <div class="card-image">
                  <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                  </figure>
                </div>
                
                <div class="card-content">
                  <div class="media">
                    <div class="media-content">
                      <p class="title is-4">Book Title</p>
                      <p class="subtitle is-6">Author</p>
                    </div>
                  </div>
    
                  <div class="content">
                    This is a sample description of the book or a review from the user
                    <br>
                    <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                  </div>
                </div>
            </div>
          </div>
          </div>

          <div class="column is-offset-2">
            <!-- recommended books -->
            <section class="hero">
              <div class="hero-body">
                <p class="title">
                  Recommended For You
                </p>
              </div>
            </section>
            <div class="columns">
              <div class="card backcard column is-4">
                <div class="card-image">
                    <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
              </div>
              <div class="card backcard column is-4 is-offset-1">
                <div class="card-image">
                    <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
              </div>
            </div>
            <div class="columns is-offset-1">
              <div class="card backcard column is-4 ">
                <div class="card-image">
                    <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
              </div>
              <div class="card backcard column is-4 is-offset-1">
                <div class="card-image">
                    <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
              </div>
            </div>
              
              
          </div>
    </section>
