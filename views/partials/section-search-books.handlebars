 <!--Search Results: All Book-->
    <section class="section is-small">
        <div class="container is-max-desktop">

            <h1 class="title">Search: All Books</h1>
            <hr>

{{#each books as |book|}}
            <div class="columns is-multiline">
                <div class="column is-three-fourths">

                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-96x96">
                                <img src="https://bulma.io/images/placeholders/320x480.png" alt="Image">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    <strong>
                                        <a href="/book/{{book.book_id}}">{{book.title}}</a>
                                    </strong> <br><small>by <strong>Author</strong></small>
                                    <br>
                                    <br>{{book.description}}

                                </p>
                                <small>ISBN: <strong>{{book.isbn}}</strong> â€¢ Genre: <strong>{{book.genre}}</strong></small>
                            </div>

                        </div>
                    </article>

                </div>
                <div class="column is-one-fourth">


                    <div class="content">
                        <p>
                            <strong>
                                Latest Reviews
                            </strong><br><br>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean efficitur sit
                            amet massa fringilla egestas. Nullam condimentum luctus turpis.

                        </p>
                        <small><strong>Tom</strong> gave this <strong>4</strong> out of <strong>5</strong></small>
                    </div>
                    <button class="button is-danger is-light">Add Review</button>

                </div>

            </div>
            <hr class="mb-6">
 {{/each}}


        </div>
    </section>








  