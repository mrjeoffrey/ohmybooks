 <!-- Hero-Profile -->

    <section class="hero is-info is-halfheight">

        <div class="hero-body container is-max-desktop">

            <div class="columns">

                <div class="columns content is-multiline">
                    <div class="column is-full">
                        <h1>
                            Welcome, {{username}}!
                        </h1>
                    </div>

                    <div class="column is-half">




                        <div class="box content is-grouped is-grouped-right">
                            <h4 class="subtitle">
                                Top Pick For You

                            </h4>
                            <article class="media">
                                <div class="media-left">
                                    <figure class="image is-96x96">
                                        <img src="https://bulma.io/images/placeholders/320x480.png" alt="Image">
                                    </figure>
                                </div>
                                <div class="media-content">
                                    <div class="content">
                                        <p>
                                            <strong>
                                                Book Title
                                            </strong> <br><small>by Author</small>
                                            <br>
                                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean efficitur
                                            sit
                                            amet massa fringilla egestas. Nullam condimentum luctus turpis.

                                        </p>
                                        <small>Tom gave this 4 out of 5</small>
                                    </div>

                                </div>
                            </article>

                            <button class="button is-danger is-light">Add Review</button>


                        </div>
                    </div>

                    <div class="column is-half">
                        <div class="box content">
                            <h4><strong>Your Reviews</strong></h4>

                            <p>Looks like you don't have any books you've reviewed. Search and add reviews now.</p>

                            <div class="field is-grouped">
                                <p class="control is-expanded">
                                    <input class="input" type="text" placeholder="Search">
                                </p>
                                <p class="control">
                                    <a class="button is-info">
                                        Search
                                    </a>
                                </p>
                            </div>

                        </div>

                        <br>
                    </div>
                </div>

            </div>

        </div>
        </div>

    </section>